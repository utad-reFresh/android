<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#4D2196F3" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Cantos superiores -->
    <item android:gravity="top|left">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="6dp" />
            <gradient
                android:endColor="#2196F3"
                android:startColor="#2196F3" />
        </shape>
    </item>

    <item android:gravity="top|left">
        <shape android:shape="rectangle">
            <size android:width="6dp" android:height="50dp" />
            <gradient
                android:endColor="#2196F3"
                android:startColor="#2196F3" />
        </shape>
    </item>

    <item android:gravity="top|right">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="6dp" />
            <gradient
                android:startColor="#2196F3"
                android:endColor="#2196F3" />
        </shape>
    </item>

    <item android:gravity="top|right">
        <shape android:shape="rectangle">
            <size android:width="6dp" android:height="50dp" />
            <gradient
                android:endColor="#2196F3"
                android:startColor="#2196F3" />
        </shape>
    </item>

    <!-- Cantos inferiores -->
    <item android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="6dp" />
            <gradient
                android:startColor="#2196F3"
                android:endColor="#2196F3" />
        </shape>
    </item>

    <item android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <size android:width="6dp" android:height="50dp" />
            <gradient
                android:startColor="#2196F3"
                android:endColor="#2196F3" />
        </shape>
    </item>

    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="6dp" />
            <gradient
                android:endColor="#2196F3"
                android:startColor="#2196F3" />
        </shape>
    </item>

    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size android:width="6dp" android:height="50dp" />
            <gradient
                android:startColor="#2196F3"
                android:endColor="#2196F3" />
        </shape>
    </item>
</layer-list>